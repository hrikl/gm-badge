{
  "manifest_version": 3,
  "name": "Chess.com Custom Title Badge",
  "version": "2.0",
  "description": "Add custom title badges to your Chess.com profile",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Configure GM Badge"
  },
  "content_scripts": [
    {
      "matches": ["https://www.chess.com/*","http://www.chess.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "https://www.chess.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
